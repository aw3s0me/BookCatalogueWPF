<Window x:Class="BookCatalogueWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог книг" Height="650" Width="1125"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        xmlns:tree="clr-namespace:BookCatalogueWPF.Client.Tree.View"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <tree:TreeView Grid.Row="0" Grid.Column="0" />
        <DockPanel Grid.Row="0" Grid.Column="1" Background="Aqua">
            
            
        </DockPanel>
    </Grid>
</Window>
